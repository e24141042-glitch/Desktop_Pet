<Window x:Class="DesktopPet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="DesktopPet"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <StackPanel x:Name="MainStackPanel" VerticalAlignment="Bottom">

        <!-- 狀態資訊區：血條 + 食物計數 (保留) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,2">
            <!-- 血條 -->
            <ProgressBar x:Name="HealthBar"
                         Width="50"
                         Height="8"
                         Visibility="Visible"
                         Foreground="#76c442"
                         Background="#555555"
                         BorderBrush="Black"
                         BorderThickness="1"
                         ToolTip="體力值"/>

            <!-- 食物數量 -->
            <Border Background="#FFFFE0" CornerRadius="5" BorderBrush="Orange" BorderThickness="1" Margin="5,0,0,0" Padding="3,0">
                <TextBlock x:Name="FoodCountText" Text="🍎 0" FontSize="10" FontWeight="Bold" VerticalAlignment="Center" Foreground="#D2691E"/>
            </Border>
        </StackPanel>

        <!-- [修改] 原本的按鈕區已移除，功能移至右鍵選單 -->

        <Image x:Name="PetImage" 
               Height="120"
               Stretch="Uniform"
               gif:ImageBehavior.AutoStart="True"
               gif:ImageBehavior.RepeatBehavior="Forever"/>
    </StackPanel>
</Window>